# SMTP Configuration (variables canon)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password
SMTP_ENCRYPTION=tls
SMTP_FROM=your-email@example.com
SMTP_FROM_NAME=Votre Nom

# Nextcloud (WebDAV) Configuration (variables canon)
NEXTCLOUD_BASE_URL=https://your-nextcloud.example.com/
NEXTCLOUD_USER=your-username
NEXTCLOUD_PASS=your-password
NEXTCLOUD_BASE_PATH=/remote.php/dav/files
NEXTCLOUD_TARGET_DIR=/path/to/target/directory

# PDF Generation
WKHTMLTOPDF_BIN=wkhtmltopdf

# Landlord Identity (used in PDF fallback config)
LANDLORD_NAME=Votre Nom
LANDLORD_ADDRESS=Votre Adresse

# Receipt Issue Location (used in PDF)
RECEIPT_ISSUE_CITY=Votre Ville
